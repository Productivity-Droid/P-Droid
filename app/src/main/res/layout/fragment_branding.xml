<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Github button -->
    <ImageButton
        android:id="@+id/watomaticGithubBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_notifications_off_24"
        tools:ignore="VectorDrawableCompat" />

    <!-- r/watomatic subreddit button -->
    <Button
        android:id="@+id/watomaticSubredditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/watomatic_subreddit_label"
        android:textAllCaps="false"
        android:textColor="?attr/colorControlNormal"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/share_btn"
        app:layout_constraintStart_toEndOf="@+id/watomaticGithubBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- r/watomatic whatsnew button -->
    <Button
        android:id="@+id/whatsNewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/watomatic_whatsnew_label"
        android:textAllCaps="false"
        android:textColor="?attr/colorControlNormal"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/share_btn"
        app:layout_constraintStart_toEndOf="@+id/watomaticGithubBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:drawableLeft="@drawable/ic_baseline_notifications_off_24" />

    <!-- App share button -->
    <ImageButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_baseline_notifications_off_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>