<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <ScrollView
      android:id="@+id/scrollView4"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/myrect"
      app:layout_constraintBottom_toTopOf="@+id/adView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/home_page_logo"></include>


        <LinearLayout
            android:id="@+id/linearLayoutforest"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/slider_background"
            android:elevation="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/include"
            app:layout_constraintTop_toBottomOf="@+id/include">

          <ImageView
              android:id="@+id/imageViewauto"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              android:paddingRight="8dp"
              android:paddingBottom="8dp"
              app:srcCompat="@drawable/ic_baseline_local_florist_24"
              tools:ignore="VectorDrawableCompat" />

          <TextView
              android:id="@+id/autoreply"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="16dp"
              android:paddingTop="16dp"
              android:paddingRight="16dp"
              android:paddingBottom="16dp"
              android:text="Focus Tree"
              android:textColor="#000000"
              android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutrateus"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/slider_background"
            android:elevation="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutforest"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutforest"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutforest">

          <ImageView
              android:id="@+id/imageViewrate"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              android:paddingRight="8dp"
              android:paddingBottom="8dp"
              app:srcCompat="@drawable/ic_baseline_star_rate_24"
              tools:ignore="VectorDrawableCompat" />

          <TextView
              android:id="@+id/rateus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="16dp"
              android:paddingTop="16dp"
              android:paddingRight="16dp"
              android:paddingBottom="16dp"
              android:text="Rate Us"
              android:textColor="#000000"
              android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAutoreply"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/slider_background"
            android:elevation="5dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/include"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutforest">

          <ImageView
              android:id="@+id/imageViewschedule"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              android:paddingRight="8dp"
              android:paddingBottom="8dp"
              app:srcCompat="@drawable/ic_baseline_reply_24"
              tools:ignore="VectorDrawableCompat" />

          <TextView
              android:id="@+id/schedule"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="16dp"
              android:paddingTop="16dp"
              android:paddingRight="16dp"
              android:paddingBottom="16dp"
              android:text="Auto Reply"
              android:textColor="#000000"
              android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutschedule"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/slider_background"
            android:elevation="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutAutoreply"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutAutoreply"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAutoreply">

          <ImageView
              android:id="@+id/imageVieweee"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              android:paddingRight="8dp"
              android:paddingBottom="8dp"
              app:srcCompat="@drawable/ic_baseline_emoji_objects_24"
              tools:ignore="VectorDrawableCompat" />

          <TextView
              android:id="@+id/forest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="1"
              android:paddingLeft="16dp"
              android:paddingTop="16dp"
              android:paddingRight="16dp"
              android:paddingBottom="16dp"
              android:text="Idea !"
              android:textColor="#000000"
              android:textSize="20sp" />

        </LinearLayout>


      </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
  </ScrollView>





  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:background="#FFFFFF"
      android:elevation="5dp"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/imageViewmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textViewprivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Privacy  Policy"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/shareimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_share_24"
        tools:ignore="VectorDrawableCompat" />

  </LinearLayout>


  <com.google.android.gms.ads.AdView
      android:id="@+id/adView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:visibility="gone"
      app:adSize="BANNER"
      app:adUnitId="ca-app-pub-3197714952509994/5178636185"

      app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/linearLayout2"></com.google.android.gms.ads.AdView>



</androidx.constraintlayout.widget.ConstraintLayout>
